<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_progressbar_sound"
        android:layout_width="3dp"
        android:layout_height="31dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_progressbar_water" />

    <ImageView
        android:id="@+id/img_icon_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/border_water_blue_fill_10"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_progressbar_sound"
        app:layout_constraintStart_toEndOf="@+id/img_progressbar_sound"
        app:layout_constraintTop_toTopOf="@+id/img_progressbar_sound"
        app:srcCompat="@drawable/icon_water" />

    <TextView
        android:id="@+id/txt_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="4dp"
        android:includeFontPadding="false"
        android:text="물 떨어지는 소리"
        android:textColor="@color/colorTextBlack"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/img_icon_sound"
        app:layout_constraintTop_toTopOf="@+id/img_progressbar_sound" />

    <TextView
        android:id="@+id/txt_sound_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="5회"
        android:textColor="@color/colorTextBlack"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@+id/txt_sound"
        app:layout_constraintTop_toBottomOf="@+id/txt_sound" />
</androidx.constraintlayout.widget.ConstraintLayout>